{
  "name": "hd-recon-v3",
  "version": "1.0.0",
  "description": "Bank Reconciliation Service - CAP project with SAP HANA support and Vector Embeddings",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@google/generative-ai": "^0.21.0",
    "@sap-ai-sdk/ai-api": "^2.1.0",
    "@sap-ai-sdk/foundation-models": "^2.1.0",
    "@sap-ai-sdk/orchestration": "^2.1.0",
    "@sap-cloud-sdk/connectivity": "^4.1.2",
    "@sap-cloud-sdk/http-client": "^4.1.2",
    "@sap/cds": "^9",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2"
  },
  "scripts": {
    "start": "cds-serve",
    "watch": "cds watch",
    "generate-embeddings": "node scripts/generate-embeddings.js",
    "deploy": "cds deploy --to hana",
    "postdeploy": "npm run generate-embeddings"
  },
  "private": true,
  "cds": {
    "requires": {
      "db": "sql",
      "auth": "dummy",
      "MicrosoftGraphAPI": {
        "kind": "rest",
        "credentials": {
          "destination": "MicrosoftGraphAPI",
          "path": "/v1.0"
        }
      }
    },
    "[development]": {
      "requires": {
        "db": {
          "kind": "sqlite"
        }
      }
    },
    "[hybrid]": {
      "requires": {
        "db": {
          "kind": "hana"
        }
      }
    },
    "[production]": {
      "requires": {
        "db": {
          "kind": "hana"
        }
      }
    }
  }
}
